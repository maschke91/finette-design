{% import 'macro/form.html.twig' as form %}

<div class="modal__content-heading">
	<span class="modal__content-title">Prohlásit objednávku za plně uhrazenou</span>
</div>
<form action="/order/ajax_pay_save" data-name="order_pay" class="full-width" novalidate>
	<div class="modal__content-text">
		{{ form.datepicker('K datu', 'payment_date', [{
			'type' : 'empty',
			'text' : 'Musíte vyplnit datum uhrazení'
		}, {
			'type' : 'format',
			'text' : 'Špatný formát data uhrazení'
    }, {
      'type' : 'valid-min',
      'text' : 'Datum úhrady je dříve než vytvoření objednávky'
    }, {
      'type' : 'valid-max',
      'text' : 'Datum úhrady je později než dnes'
		}]) }}
	</div>
	<div class="modal__content-footer">
		{{ form.hidden('id', id) }}
		<a href="#" class="btn modal__button--cancel">Zrušit</a>
		{{ form.submit('Uložit', 'Ukládám...') }}
	</div>
</form>


