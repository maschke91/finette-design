{% extends 'layout/menu.html.twig' %}

{% import 'macro/form.html.twig' as form %}

{% block content %}
<section class="page__content bg-white box__shadow">
	<div class="breadcrumbs__wrap">
		<span class="breadcrumbs__item">Bankovní účty</span>
	</div>
	<div class="section">
		<table class="table">
			<thead>
				<tr>
					<th>Název</th>
					<th class="text-right">
						{% if not noprofile %}<a href="/bank/new" class="btn btn-colored primary-bg">Přidat</a>{% endif %}
					</th>
				</tr>
			</thead>
			<tbody>
				{% for item in items %}
				<tr>
					<td>{{ item.name }}</td>
					<td class="text-right">
						<a href="/bank/edit/{{ item.id }}" title="Upravit" class="btn btn-icon btn-rounded smaller-icon">
							<span class="svg__container">
								<svg class="svg__icon svg__content">
									<use xlink:href="/assets/img/svg/svg.svg#edit" x="0" y="0" width="100%" height="100%" />
								</svg>
							</span>
						</a>
						<a href="/bank/delete/{{ item.id }}" title="Smazat" class="js-confirm btn btn-icon btn-rounded">
							<span class="svg__container">
								<svg class="svg__icon svg__content">
									<use xlink:href="/assets/img/svg/svg.svg#close" x="0" y="0" width="100%" height="100%" />
								</svg>
							</span>
						</a>
					</td>
				</tr>
				{% endfor %}
			</tbody>
		</table>
		{% if noprofile %}
		<div class="no_items">
			Pro pokračování si vytvořte <a href="/profile">Profil</a>.
		</div>
		{% elseif items is empty %}
		<div class="no_items">
			<p>Žádné položky k zobrazení.</p>
		</div>
		{% endif %}
	</div>
</section>
{% endblock %}

