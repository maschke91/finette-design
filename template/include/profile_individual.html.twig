{% import 'macro/form.html.twig' as form %}
<fieldset>
	<legend class="legend">Osobní údaje</legend>
	<div class="row">
		<div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
			{{ form.input('Titul před jménem', 'title_before', null, title_before) }}
		</div>
		<div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
			{{ form.input('Křestní jméno', 'name', [{
				'type' : 'empty',
				'text' : 'Musíte vyplnit křestní jméno'
			}], name) }}
		</div>
		<div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
			{{ form.input('Příjmení', 'surname', [{
				'type' : 'empty',
				'text' : 'Musíte vyplnit příjmení'
			}], surname) }}
		</div>
		<div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
			{{ form.input('Titul za jménem', 'title_after', null, title_after) }}
		</div>
		{% if role == 1 %}
		<div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
			{{ form.input('Bankovní účet', 'bank', [{
				'type' : 'empty',
				'text' : 'Musíte vyplnit bankovní účet'
			}, {
				'type' : 'format',
				'text' : 'Špatný formát bankovního účtu'
			}, {
				'type' : 'valid',
				'text' : 'Neplatné bankovní účet'
			}], bank) }}
		</div>
		<div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
			{{ form.input('IČ', 'crn', [{
				'type' : 'empty',
				'text' : 'Musíte vyplnit IČ'
			}, {
				'type' : 'format',
				'text' : 'Špatný formát IČ'
			}, {
				'type' : 'valid',
				'text' : 'Neplatné IČ'
			}], crn, null, crn) }}
		</div>
		{% endif %}
		<div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
			{{ form.input('Rodné číslo', 'birth_no', [{
				'type' : 'empty',
				'text' : 'Musíte vyplnit rodné číslo'
			}, {
				'type' : 'format',
				'text' : 'Špatný formát rodného čísla'
			}, {
				'type' : 'valid',
				'text' : 'Neplatné rodné číslo'
			}, {
				'type' : 'valid-match',
				'text' : 'Rodné číslo se neshoduje s datem narození'
			}], birth_no, null, birth_no) }}
		</div>
		<div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
			{{ form.datepicker('Datum narození', 'birth_date', [{
				'type' : 'empty',
				'text' : 'Musíte vyplnit datum narození'
			}, {
				'type' : 'format',
				'text' : 'Špatný formát data narození'
			}, {
				'type' : 'valid',
				'text' : 'Datum narození se neshoduje s rodným číslem'
			}, {
				'type' : 'valid-age',
				'text' : 'Neplnoletý'
			}], birth_date, null, birth_date) }}
		</div>
		<div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
			{{ form.input('Místo narození', 'birth_city', [{
				'type' : 'empty',
				'text' : 'Musíte vyplnit místo narození'
			}], birth_city) }}
		</div>
		<div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
			{{ form.select('Daňová rezidence', 'tax_residence_id', [{
				'type' : 'empty',
				'text' : 'Musíte vybrat daňovou rezidenci'
			}], countries, tax_residence_id) }}
		</div>
	</div>
</fieldset>
<fieldset>
	<legend class="legend">Kontaktní údaje</legend>
	<div class="row">
		<div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
			{{ form.input('E-Mail', 'email', [{
				'type' : 'empty',
				'text' : 'Musíte vyplnit e-mail'
			}, {
				'type' : 'format',
				'text' : 'Špatný formát e-mailu'
			}], email, 'email') }}
		</div>
		<div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
			{{ form.input('Telefonní číslo', 'phone', [{
				'type' : 'empty',
				'text' : 'Musíte vyplnit telefonní číslo'
			}, {
				'type' : 'format',
				'text' : 'Špatný formát telefonního čísla'
			}], phone, 'tel') }}
		</div>
	</div>
</fieldset>
<fieldset>
	<legend class="legend">Občanský průkaz</legend>
	<div class="row">
		<div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
			{{ form.input('Číslo', 'identity_card_no', [{
				'type' : 'empty',
				'text' : 'Musíte vyplnit číslo'
			}, {
				'type' : 'format',
				'text' : 'Špatný formát čísla'
			}], identity_card_no) }}
		</div>
		<div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
			{{ form.input('Vydavatel', 'identity_card_issuer', [{
				'type' : 'empty',
				'text' : 'Musíte vyplnit vydavatele'
			}], identity_card_issuer) }}
		</div>
		<div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
			{{ form.datepicker('Datum vydání', 'identity_card_valid_from_date', [{
				'type' : 'empty',
				'text' : 'Musíte vyplnit datum vydání'
			}, {
				'type' : 'format',
				'text' : 'Špatný formát data vydání'
			}, {
				'type' : 'valid',
				'text' : 'Datum vydání je později než dnes'
			}], identity_card_valid_from_date) }}
		</div>
		<div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
			{{ form.datepicker('Datum konce platnosti', 'identity_card_valid_to_date', [{
				'type' : 'empty',
				'text' : 'Musíte vyplnit datum konce platnosti'
			}, {
				'type' : 'format',
				'text' : 'Špatný formát data konce platnosti'
			}, {
				'type' : 'valid',
				'text' : 'Datum konce platnosti je dříve než dnes'
			}], identity_card_valid_to_date) }}
		</div>
	</div>
</fieldset>
<fieldset>
	<legend class="legend">Trvalá adresa</legend>
	<div class="row">
		<div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
			{{ form.input('Ulice', 'address_permanent_street', [{
				'type' : 'empty',
				'text' : 'Musíte vyplnit ulici'
			}], address_permanent_street) }}
		</div>
		<div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
			{{ form.input('Číslo popisné a orientační', 'address_permanent_no', [{
				'type' : 'empty',
				'text' : 'Musíte vyplnit č.p. a č.o.'
			}], address_permanent_no) }}
		</div>
		<div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
			{{ form.input('Upřesňující informace', 'address_permanent_addition', null, address_permanent_addition) }}
		</div>
		<div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
			{{ form.input('Město', 'address_permanent_city', [{
				'type' : 'empty',
				'text' : 'Musíte vyplnit město'
			}], address_permanent_city) }}
		</div>
		<div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
			{{ form.input('PSČ', 'address_permanent_zip', [{
				'type' : 'empty',
				'text' : 'Musíte vyplnit PSČ'
			}, {
				'type' : 'format',
				'text' : 'Špatný formát PSČ'
			}], address_permanent_zip) }}
		</div>
		<div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
			{{ form.select('Země', 'address_permanent_country_id', [{
				'type' : 'empty',
				'text' : 'Musíte vybrat zemi'
			}], countries, address_permanent_country_id) }}
		</div>
	</div>
</fieldset>
<fieldset>
	<legend class="legend">Korespondenční adresa</legend>
	{{ form.checkbox('Korespondenční adresa je jiná než trvalá', 'address_different', null, null, address_different, null, "addressDifferent") }}
	<div class="row" data-toggle-addressDifferent="1">
		<div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
			{{ form.input('Ulice', 'address_mailing_street', [{
				'type' : 'empty',
				'text' : 'Musíte vyplnit ulici'
			}], address_mailing_street) }}
		</div>
		<div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
			{{ form.input('Číslo popisné a orientační', 'address_mailing_no', [{
				'type' : 'empty',
				'text' : 'Musíte vyplnit č.p. a č.o.'
			}], address_mailing_no) }}
		</div>
		<div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
			{{ form.input('Upřesňující informace', 'address_mailing_addition', null, address_mailing_addition) }}
		</div>
		<div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
			{{ form.input('Město', 'address_mailing_city', [{
				'type' : 'empty',
				'text' : 'Musíte vyplnit město'
			}], address_mailing_city) }}
		</div>
		<div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
			{{ form.input('PSČ', 'address_mailing_zip', [{
				'type' : 'empty',
				'text' : 'Musíte vyplnit PSČ'
			}, {
				'type' : 'format',
				'text' : 'Špatný formát PSČ'
			}], address_mailing_zip) }}
		</div>
		<div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
			{{ form.select('Země', 'address_mailing_country_id', [{
				'type' : 'empty',
				'text' : 'Musíte vybrat zemi'
			}], countries, address_mailing_country_id) }}
		</div>
	</div>
</fieldset>
