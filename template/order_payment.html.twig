{% extends 'layout/menu.html.twig' %}

{% import 'macro/form.html.twig' as form %}

{% block content %}
<section class="page__content bg-white box__shadow">
  <div class="px-4 pt-5">
    <div class="pb-4">
      <div class="row">
        <div class="col-xs-12 col-md-6 p-0">
          <h2 class="legend pb-3">Platební instrukce</h2>
          <table class="table">
            <tr>
              <th>Částka</th>
              <td>{{ amount|number_format(2, ',', '.') }} {{ currency }}</td>
            </tr>
            <tr>
              <th>Datum splatnosti</th>
              <td>{{ term }}</td>
            </tr>
            <tr>
              <th>Číslo účtu</th>
              <td>{{ bank }}</td>
            </tr>
            <tr>
              <th>Variabilní symbol</th>
              <td>{{ vs }}</td>
            </tr>
          </table>
          <div class="pt-5">
            <h2 class="legend pb-3">Dokumenty ke stažení</h2>
            <table class="table">
              <tbody>
                <tr>
                  <td>
                    <a href="{{ contract_link }}" title="Smlouva" download>Smlouva</a>
                  </td>
                </tr>
                <tr>
                  <td>
                    <a href="{{ payment_link }}" title="Platební instrukce" download>Platební instrukce</a>
                  </td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>
        <div class="col-xs-12 col-md-6 p-0 text-center">
          <div class="qr__wrap">
            <span class="qr__wrap-title">QR platba</span>
            <img src="{{ qr }}" alt="qr" class="qr__wrap-img" />
          </div>
        </div>
      </div>
    </div>
    <div class="form__button-wrap button-wrap-horizontal">
        <a href="/order/overview" class="grey-link smaller-link">Přehled objednávek</a>
    </div>
  </div>
</section>


